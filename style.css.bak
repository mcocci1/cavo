body {
    font-family: sans-serif;
    background-color: #f0f0f0;
    margin: 0; /*Rimuove i margini di default*/
}

.container {
    width: 90%; /*La larghezza Ã¨ relativa al 90% dello schermo*/
    max-width: 300px; /*massimo 300px di larghezza per schermi grandi*/
    margin: 20px auto;
    text-align: center;
    background-color: #fff;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.container h1 {
    font-size: 24px;
    margin-bottom: 20px;
    text-align: center;
}

input[type="text"] {
    width: calc(100% - 20px); /*Larghezza del 100% meno il padding*/
    padding: 10px;
    margin-bottom: 10px;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 3px;
}

button {
    padding: 10px 20px;
    margin: 5px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 3px;
    cursor: pointer;
}

button:hover {
    background-color: #0056b3;
}

#output1, #output2 {
    margin-bottom: 10px;
}

#output2 strong{
    color: #007bff;
}

#output1, #output2 {
  margin-bottom: 10px;
}

#output2 strong{
  color: #007bff;
}

/* Stili per il menu */
.menu-icon {
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 24px;
    cursor: pointer;
}

.menu {
    position: absolute;
    top: 40px;
    right: 10px;
    background-color: #fff;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
    display: none; /* Nascondi il menu inizialmente */
    z-index: 10;
}

.menu a {
    display: block;
    padding: 5px 10px;
    text-decoration: none;
    color: #333;
}

.menu a:hover {
    background-color: #f0f0f0;
}

/* Stili per la pagina under_construction.html */
body.under-construction {
    background-color: #f9f9f9;
}

body.under-construction .container {
    max-width: 400px;
    padding: 30px;
}

body.under-construction h1 {
    font-size: 24px;
    margin-bottom: 20px;
}

body.under-construction p {
    font-size: 16px;
    margin-bottom: 30px;
}

body.under-construction a {
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
}